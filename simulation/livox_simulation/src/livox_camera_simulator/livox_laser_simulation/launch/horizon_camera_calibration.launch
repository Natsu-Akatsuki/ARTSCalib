<?xml version="1.0" ?>
<launch>
  <param name="/use_sim_time" value="false" />

  <!-- 启动Gazebo -->
  <arg name="world_name" default="$(find livox_laser_simulation)/worlds/calibration.world"/>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="recording" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- 发布TF和机器人模型 -->
  <arg name="model_urdf" default="$(find livox_laser_simulation)/urdf/horizon_camera.urdf.xacro"/>
  <param name="robot_description" command="$(find xacro)/xacro '$(arg model_urdf)'"/>
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

  <!-- 追加模型 -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model lidar -param robot_description"/>

  <!-- 启动RViz -->
  <arg name="rviz" default="true"/>
  <node if="$(arg rviz)" pkg="rviz" type="rviz" name="$(anon rviz)" respawn="false" output="screen" args="-d $(find livox_laser_simulation)/rviz/horizon_camera.rviz"/>


</launch>